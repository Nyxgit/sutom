{# templates/user/inscription.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/inscription.css') }}">

	<div id="inscription-container">
		<h2>Inscription</h2>

		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.username) }}
			{{ form_widget(form.username, { 'attr': {'placeholder': 'Nom d\'utilisateur'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, { 'attr': {'placeholder': 'Mot de passe'} }) }}
        </div>

        <button class="button" type="submit">S'inscrire</button>
        <p>Déjà inscrit ? <a href="{{ path('sutom_connexion') }}">Connectez-vous ici</a>.</p>


        {{ form_end(form) }}
		</div>
	{% endblock %}
